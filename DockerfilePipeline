FROM node:10-alpine as builder
WORKDIR /usr/src/app
COPY *.json /usr/src/app/
RUN npm install

FROM node:14-alpine as delivery
WORKDIR /usr/src/app
ENV PATH=/usr/src/app/node_modules/.bin:$PATH
COPY --from=builder /usr/src/app/node_modules/ /usr/src/app/node_modules/
COPY . .
CMD ["node", "server.js"]
